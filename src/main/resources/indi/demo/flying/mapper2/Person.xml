<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="indi.demo.flying.mapper2.PersonMapper">
	<cache />

	<select id="mySelect" resultMap="result">
		flying#{?}:select
	</select>

	<select id="mySelectAll" resultMap="result">
		flying:selectAll
	</select>

	<select id="mySelectOne" resultMap="result">
		flying:selectOne
	</select>

	<select id="myCount" resultType="int">
		flying:count
	</select>

	<!-- 采用 flying 内置的 “无横线的uuid” 生成器，其余内置属性可参见 indi.mybatis.flying.statics.KeyGeneratorType -->
	<insert id="myInsert">
		flying:insert(uuid_no_line)
	</insert>

	<update id="myUpdate">
		flying:update
	</update>

	<update id="myUpdatePersistent">
		flying:updatePersistent
	</update>

	<delete id="myDelete">
		flying:delete
	</delete>

	<resultMap id="result" type="Person" autoMapping="true">
		<id property="id" column="ID" />
		<result property="name" column="NAME" />
		<result property="role" column="ROLE_ID"
			typeHandler="indi.demo.flying.typeHandler.RoleTypeHandler" />
	</resultMap>
</mapper>